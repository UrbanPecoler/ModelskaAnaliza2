# General Plot Style
axes.formatter.use_mathtext : True
axes.linewidth: 2
axes.grid: True
axes.grid.which: both
axes.grid.axis: both
axes.xmargin: 0.03
axes.ymargin: 0.05

# Titles and labelsize
axes.titlesize: 20
axes.labelsize: 19
axes.labelweight: bold

# Ticks
xtick.labelsize: 20
ytick.labelsize: 20
xtick.direction: in
ytick.direction: in
# ---- Tole ni treba. For now ---- 
