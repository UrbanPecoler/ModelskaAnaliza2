# ytick.minor.size: 4


# Legends
legend.fontsize: 20
legend.loc: best
legend.handlelength: 2
legend.labelspacing: 1.5
legend.borderpad: 1.5
legend.frameon: True
legend.framealpha: 0.5


# Grid 
grid.alpha: 0.2
grid.color: grey
grid.linestyle: --


# Font settings 
font.family: serif
font.serif: Times New Roman, Times, DejaVu Serif
mathtext.fontset: stix


# Figure size
figure.figsize: 12, 7


# Saving figures
savefig.dpi: 300
savefig.bbox: tight
